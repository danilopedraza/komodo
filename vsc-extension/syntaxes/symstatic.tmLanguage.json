{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "symstatic",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#calls"
		},
		{
			"include": "#symbols"
		}
	],
	"repository": {
		"comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.smtc",
          "match": "#.*$"
        }
      ]
    },
		"strings": {
			"name": "string.quoted.double.smtc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.smtc",
					"match": "\\\\."
				}
			]
		},
		"chars": {
			"name": "string.quoted.single.smtc",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.smtc",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
        {
          "name": "constant.numeric.integer.smtc",
          "match": "(?<![\\w\\d.])\\d+(?![.])"
        },
        {
          "name": "constant.numeric.float.smtc",
          "match": "(\\d+)?\\.(\\d+)?"
        }
      ]
		},
		"calls": {
			"patterns": [
				{
					"name": "entity.name.function.smtc",
					"match": "[a-zA-Z]+(\\()"
				}
			]
		},
		"symbols": {
			"patterns": [
				{
					"name": "variable.name.smtc",
					"match": "[a-zA-Z]+"
				}
			]
		}
	},
	"scopeName": "source.smtc"
}
