{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "komodo",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#calls"
		},
		{
			"include": "#symbols"
		}
	],
	"repository": {
		"comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.komodo",
          "match": "#.*$"
        }
      ]
    },
		"strings": {
			"name": "string.quoted.double.komodo",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.komodo",
					"match": "\\\\."
				}
			]
		},
		"chars": {
			"name": "string.quoted.single.komodo",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.komodo",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.komodo",
					"match": "(?<![\\w\\d.])(0b|0B|0x|0X|0o|0O|)[\\da-fA-F_]+(?![.])"
				},
				{
					"name": "constant.numeric.float.komodo",
					"match": "(\\d+)?\\.(\\d+)?"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.komodo",
					"match": "\\b(true|false|let|in)\\b"
				},
				{
					"name": "keyword.control.komodo",
					"match": "\\b(for|if|else|then|from|import)\\b"
				}
			]
		},
		"calls": {
			"patterns": [
				{
					"name": "entity.name.function.komodo",
					"match": "[a-zA-Z]+(\\()"
				}
			]
		},
		"symbols": {
			"patterns": [
				{
					"name": "entity.name.class.komodo",
					"match": "[A-Z][a-zA-Z0-9]*"
				},
				{
					"name": "variable.name.komodo",
					"match": "[a-zA-Z][a-zA-Z0-9]*"
				}
			]
		}
	},
	"scopeName": "source.komodo"
}
